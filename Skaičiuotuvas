

def sudėtis(x, y):
    return x + y

def atimtis(x, y):
    return x - y

def daugyba(x, y):
    return x * y

def dalyba(x, y):
    if y != 0:
        return x / y
    else:
        return "Dalyba iš nulio negalima"
    
def skaiciuotuvas():
    print("Pasirinkite norimą atlikti operaciją:")
    print("1. Sudėtis")
    print("2. Atimtis")
    print("3. Daugyba")
    print("4. Dalyba")

    operacija = input("Įveskite numerį operacijai: ")

    x = float(input("Įveskite x: "))
    y = float(input("Įveskite y: "))


    if operacija == '1':
        print("Sudėties atsakymas: ", sudėtis(x, y))
    elif operacija == '2':
        print("Atimties atsakymas: ", atimtis(x, y))
    elif operacija == '3':
        print("Daugybos atsakymas: ", daugyba(x, y))
    elif operacija == '4':
        print("Dalybos atsakymas: ", dalyba(x, y))
    else:
        print("Neteisingas operacijos numeris")
while True:
# Paleidziame skaiciuotuvo funkcija
    skaiciuotuvas()