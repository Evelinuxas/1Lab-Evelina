from flask import Flask, request
app = Flask(__name__)



skaicius = 0 # apsirasome kintamaji ( Globalus )

def sudetis(x,y):
        return x+y

def atimtis(x, y):
    return x - y

def daugyba(x, y):
    return x * y

def dalyba(x, y):
    if y != 0:
        return x / y
    else:
        return "Dalyba is nulio negalima"


@app.route("/") # Route 1
def hello_world():

    return "Labas" """
                <form action="/skaicius">
                    <label for="test">Įrašykite pirmą skaičių</label><br>
                        <input type="text" id="test" name="test" value=" "><br>
                        </br></br>

                    <label for="test2">Įrašykite antrą skaičių</label><br>
                        <input type="text" id="test2" name="test2" value=" "><br><br>
                        </br></br>

                    <label for="veiksmas">Palikite vieną norimo atlikti matematinio veiksmo ženklą </label><br>   
                        <input type="text" id="veiksmas" name="veiksmas" value="+ - * /"><br><br>
                        </br></br>   
                    <input type="submit" value="Skaiciuoti">
                </form> 
            """

@app.route("/labas")  # Route 2
def sakyk_labas():
    global skaicius ## Naudoju globalu kintamaji
    skaicius = skaicius +1 ## kaskart atidare pridedam 1
    return f"Labas {skaicius}"


@app.route("/skaicius") # Route 3
def skaiciuoti():
    if not request.args.get("test") or not request.args.get("test2"):
        return "Nera argumento" #Kad programa pasileistu, reikia naudoti if funkcija, kad vartotojui pranest, kad reikia irasyt reiksmes
    #UZKLAUSA. ARGUMENTAI. METODAS()
    skaicius = request.args.get("test") ### Pasiimam argumenta is URL 
    skaicius2 = request.args.get("test2") ### Pasiimam argumenta 2 is URL
    operacija = request.args.get("veiksmas") ### Pasiimam argumenta 3 is URL


    if operacija == '+':
        suma2 = sudetis(int(skaicius),int(skaicius2))
        return f"Tavo skaiciu suma: {suma2}"
 
    elif operacija == '-':
        atimtis2 = atimtis(int(skaicius),int(skaicius2))
        return f"Tavo skaiciu atimtis: {atimtis2}"

    elif operacija == '*':
        daugyba2 = daugyba(int(skaicius),int(skaicius2))
        return f"Tavo skaiciu daugyba: {daugyba2}"

    elif operacija == '/':
        dalyba2 = dalyba(int(skaicius),int(skaicius2))
        return f"Tavo skaiciu dalyba: {dalyba2}"

    else:
        return f"Tavo matematinis ženklas neatitinka reikalavimų, bandyk iš naujo"

if __name__ == "__main__":
    app.run()


def sudėtis(x, y):
    return x + y

def atimtis(x, y):
    return x - y

def daugyba(x, y):
    return x * y

def dalyba(x, y):
    if y != 0:
        return x / y
    else:
        return "Dalyba is nulio negalima"
    
def skaiciuotuvas():
    print("Pasirinkite norima atlikti operacija:")
    print("1. Sudetis")
    print("2. Atimtis")
    print("3. Daugyba")
    print("4. Dalyba")

    operacija = input("Iveskite numeri operacijai: ")

    x = float(input("Iveskite x: "))
    y = float(input("Iveskite y: "))


    if operacija == '+':
        print("Sudėties atsakymas: ", sudėtis(x, y))
    elif operacija == '-':
        print("Atimties atsakymas: ", atimtis(x, y))
    elif operacija == '*':
        print("Daugybos atsakymas: ", daugyba(x, y))
    elif operacija == '/':
        print("Dalybos atsakymas: ", dalyba(x, y))
    else:
        print("Neteisingas matematinio veiksmo ženklas")
while True:
# Paleidziame skaiciuotuvo funkcija
    skaiciuotuvas()