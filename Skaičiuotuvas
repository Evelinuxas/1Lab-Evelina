from flask import Flask, request
app = Flask(__name__)



skaicius = 0 # apsirasome kintamaji ( Globalus )

def sudetis(x,y):
        return x+y

def atimtis(x, y):
    return x - y

def daugyba(x, y):
    return x * y

def dalyba(x, y):
    if y != 0:
        return x / y
    else:
        return "Dalyba is nulio negalima"


@app.route("/") # Route 1
def hello_world():

    return "Labas" """
                <form action="/skaicius">
                    <label for="test">skaicius 1</label><br>
                        <input type="text" id="test" name="test" value="0"><br>
                        </br></br>

                    <label for="test2">skaicius 2</label><br>
                        <input type="text" id="test2" name="test2" value="0"><br><br>
                        </br></br>

                    <label for="veiksmas">Matematinis veiksmas</label><br>   
                        <input type="text" id="veiksmas" name="Matematinis veiksmas" value="0"><br><br>
                        </br></br>   
                    <input type="submit" value="Submit">
                </form> 
            """

@app.route("/labas")  # Route 2
def sakyk_labas():
    global skaicius ## Naudoju globalu kintamaji
    skaicius = skaicius +1 ## kaskart atidare pridedam 1
    return f"Labas {skaicius}"


@app.route("/skaicius") # Route 3
def skaiciuoti():
 if not request.args.get("test") or not request.args.get("test2"):
    return "Nera argumento" #Kad programa pasileistu, reikia naudoti if funkcija, kad vartotojui pranest, kad reikia irasyt reiksmes
    #UZKLAUSA. ARGUMENTAI. METODAS()
    skaicius = request.args.get("test") ### Pasiimam argumenta is URL 
    skaicius2 = request.args.get("test2") ### Pasiimam argumenta 2 is URL

    suma = sudetis(int(skaicius),int(skaicius2))

    return f"Tavo skaiciu suma: {suma}"


if __name__ == "__main__":
    app.run()


def sudėtis(x, y):
    return x + y

def atimtis(x, y):
    return x - y

def daugyba(x, y):
    return x * y

def dalyba(x, y):
    if y != 0:
        return x / y
    else:
        return "Dalyba is nulio negalima"
    
def skaiciuotuvas():
    print("Pasirinkite norima atlikti operacija:")
    print("1. Sudetis")
    print("2. Atimtis")
    print("3. Daugyba")
    print("4. Dalyba")

    operacija = input("Iveskite numeri operacijai: ")

    x = float(input("Iveskite x: "))
    y = float(input("Iveskite y: "))


    if operacija == '1':
        print("Sudėties atsakymas: ", sudėtis(x, y))
    elif operacija == '2':
        print("Atimties atsakymas: ", atimtis(x, y))
    elif operacija == '3':
        print("Daugybos atsakymas: ", daugyba(x, y))
    elif operacija == '4':
        print("Dalybos atsakymas: ", dalyba(x, y))
    else:
        print("Neteisingas operacijos numeris")
while True:
# Paleidziame skaiciuotuvo funkcija
    skaiciuotuvas()